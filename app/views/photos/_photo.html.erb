<div>
  <!-- If image is still processing, background job -->
  <% if photo.image_processed? %>
    <%= link_to image_tag(photo.image_url(:thumb)), photo %>
  <% else %>
    <em>Processing...</em>
  <% end %>

  <div><%= photo.name %></div>
  <div>
    <%= link_to "Edit", edit_photo_path(photo) %>
    <%= link_to "Delete", photo, :confirm => "Are you sure?", :method => :delete %>
  </div>
</div>
